{% extends 'base.html.twig' %}

{% block title %}Mail Signature Generator - {{ parent() }}{% endblock %}

{% block body %}
    <main id="main">
        <section class="breadcrumbs">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>Mail Signature Generator</h2>
                    <ol>
                        <li><a href="/">Home</a></li>
                        <li>Mail Signature Generator</li>
                    </ol>
                </div>
            </div>
        </section>
        <section class="search">
            <div class="container">
                <div class="section-title"><h2>Mail Signature Generator</h2></div>
                <form method="post" action="">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Complete name">
                    <input type="submit" id="formSubmit" name="formSubmit" class="btn btn-primary mt-2">
                </form>

                {% if templateMail %}
                    <div class="section-title"><h2>Results</h2></div>
                    <p>{{ templateMail|raw }}</p>
                {% endif %}
            </div>
        </section>
    </main>
{% endblock %}